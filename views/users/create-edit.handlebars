
{{>errors}}
<div class="myform p-5">
      <form class="" method="post" action={{#if id}}"/app/edit/{{id}}?_method=PATCH"
                                    {{else}}"/app/create"{{/if}} enctype="multipart/form-data" >

      
  <div >
              <label class="form-label">nom :</label>
          <input class="form-control" type="text" name="nom" value="{{#if nom}}{{nom}}{{/if}}"/>
        </div>
         <div >
          <label class="form-label">pr√©nom :</label>
          <input class="form-control" type="text" name="prenom" value="{{#if prenom}}{{prenom}}{{/if}}"/>
        </div>
        <div >
          <label class="form-label">email :</label>
          <input class="form-control" type="text" name="email" value="{{#if email}}{{email}}{{/if}}"/>
        </div><br>
        <div>
           <div >
          <input class="form-control" id="avatar" type="file" name="avatar" onchange="avatarChange(event)"/>
           </div><br>
          <div id="dropArea" ondrop="dropImage(event)" class="preview d-none"></div>
          <div class="preview d-none">
            {{#if avatar}} Avatar actuel :{{/if}}
              <img src="/static/{{#if avatar}}avatars/{{avatar}}{{else}}default.jpg{{/if}}" width="80" height="80">
          </div>

        </div>
        
        <input class="bg-blueviolet" type="submit" value="{{#if id}}Modifier{{else}}Enregistrer{{/if}}" />
      </form>
</div>
<script src="/static/lib.js"></script>
